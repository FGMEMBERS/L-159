<?xml version="1.0"?>

<!-- Attitude Indicator, by Dave Culp -->

<PropertyList>

 <path>AI6.ac</path>

    <animation>
  <type>scale</type>
  <x-offset>0.37</x-offset>
  <y-offset>0.37</y-offset>
  <z-offset>0.37</z-offset>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>AttitudeBall</object-name>
  <property>orientation/roll-deg</property>
  <factor>1</factor>
  <center>
   <x-m>-0.0283</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>  

  <animation>
  <type>rotate</type>
  <object-name>AttitudeBall</object-name>
  <property>orientation/pitch-deg</property>
  <factor>1</factor>
  <center>
   <x-m>-0.0283</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>  

  <animation>
  <type>rotate</type>
  <object-name>SkyPointer</object-name>
  <property>orientation/roll-deg</property>
  <factor>1</factor>
  <center>
   <x-m>0.019</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>material</type>
  <object-name>AttitudeBall</object-name>
   <emission>
     <red>0.5</red>
     <green>0.4</green>
     <blue>0.4</blue>
     <!--
    <factor-prop>controls/lighting/instruments-norm</factor-prop> -->
   </emission> 
 </animation>    
 <animation>
  <type>material</type>
  <object-name>SkyPointer</object-name>
   <emission>
     <red>0.6</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <!--
    <factor-prop>controls/lighting/instruments-norm</factor-prop> -->
   </emission> 
 </animation>    

<!-- Adjust knob vertical -->

    <animation>
        <type>pick</type>
        <object-name>cylinder</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.3</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/attitude-indicator/extra/vertical-adjust</property>
                <step>.01</step>
                <min>-.10</min>
                <max>.10</max>
             </binding>
        </action>
    </animation>

    <animation>    
            <type>pick</type>
        <object-name>cylinder</object-name>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.3</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/attitude-indicator/extra/vertical-adjust</property>
                <step>-.01</step>
                <min>-.10</min>
                <max>.10</max>
             </binding>
        </action>
    </animation>


  <animation>
  <type>rotate</type>
  <object-name>AIairplane</object-name>
  <property>instrumentation/attitude-indicator/extra/vertical-adjust</property>
  <center>
   <x-m>-0.02902</x-m>
   <y-m>-0.00025</y-m>
   <z-m>-0.00016</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>-10</z>
  </axis>
 </animation>


 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>