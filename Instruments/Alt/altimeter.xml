<PropertyList>

 <path>ALT.ac</path>
   
    <animation>
  <type>scale</type>
  <x-offset>0.50</x-offset>
  <y-offset>0.50</y-offset>
  <z-offset>0.50</z-offset>
 </animation>
 
	<animation>
		<type>rotate</type>
		<object-name>Aiguille</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>-0.36</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>Ft-m</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>

	<animation>
		<condition>
			<not>
				<less-than>
					<property>/instrumentation/altimeter/indicated-altitude-ft</property>
					<value>0</value>
				</less-than>
			</not>
		</condition>
		<type>select</type>
		<object-name>Ft-dm</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
	</animation>

	<animation>
		<condition>
				<less-than>
					<property>/instrumentation/altimeter/indicated-altitude-ft</property>
					<value>0</value>
				</less-than>
		</condition>
		<type>select</type>
		<object-name>Ft-minus</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>Ft-dm</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>



	<animation> <!-- hundredeths -->
		<type>textranslate</type>
		<object-name>PA-cc</object-name>
		<property>/instrumentation/altimeter/setting-inhg</property>
		<factor>10</factor>
		<step>0.01</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>
 	

	<animation> <!-- tenths -->
		<type>textranslate</type>
		<object-name>PA-dc</object-name>
		<property>/instrumentation/altimeter/setting-inhg</property>
		<factor>1</factor>
		<step>0.1</step>
		<scroll>.001</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>

	<animation> <!-- unit -->
		<type>textranslate</type>
		<object-name>PA-un</object-name>
		<property>/instrumentation/altimeter/setting-inhg</property>
		<factor>0.1</factor>
		<step>1.0</step>
		<scroll>.01</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>

	<animation> <!-- tens -->
		<type>textranslate</type>
		<object-name>PA-di</object-name>
		<property>/instrumentation/altimeter/setting-inhg</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
 	</animation>

	<animation> 
		<type>rotate</type>
		<object-name>Tambour</object-name>
		<property>/instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.36</factor>
		<center>
			<x-m>-0.00438288</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

<!-- Pressure Knob -->
    <animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>.01</step>
                <min>28.1</min>
                <max>31.0</max>
             </binding>
        </action>
    </animation>

    <animation>    
            <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <button>2</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-.01</step>
                <min>28.1</min>
                <max>31.0</max>
             </binding>
        </action>
    </animation>    
    
  
    <animation>
            <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>.01</step>
                <min>28.1</min>
                <max>31.0</max>
             </binding>
        </action>
    </animation>    
    
    <animation>
            <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <interval-sec>-0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-.01</step>
                <min>28.1</min>
                <max>31.0</max>
            </binding>
        </action>
    </animation>    
    
    
